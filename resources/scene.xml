<scene name="basic_scene">
	
	<!-- Predeclare objects! -->
	<materials>
		<material name="default_RED" diffuse="1.0 0 0 1.0"/>
	</materials>

	<node>
		<transform position="0 0 0"/>
		<scripts>
			<script filename="resources/scripts/MyBehaviourClass.py"/>
		</scripts>
		<children>
			<node>
				<transform position="0 0 0"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0.5 0 1">
					<shader name="phong.shader"/>
				</material>
			</node>
		</children>
	</node>

	<!-- Test Audio -->
	<node name="audio_root">
		<scripts>
			<script filename="resources/scripts/RotationTest.py"/>
		</scripts>
		<children>
			<node name="audio_source">
				<transform position="5 0 0"/>
				<audiosource filename="blip.wav" loop="True" play="True"/>
				<scripts>
					<script filename="resources/scripts/PositionGizmo.py"/>
				</scripts>
			</node>
		</children>
	</node>

	<node name="main_node">
		<transform position="2 1 0"/>
		<mesh preset="SPHERE"/>
		<material diffuse="1 0.5 0 1">
					<texture filename="UVmapLarge.bmp"/>
			<shader name="phong.shader"/>
		</material>
		<scripts>
			<script filename="resources/scripts/MyBehaviourClass.py"/>
		</scripts>
		<children>
			
			<node name="child_node_cube_falling">
				<transform position="-2 2 0"/>
				<mesh preset="CUBE"/>
				<material diffuse="1 0.5 0 1">
					<texture filename="UVmapLarge.bmp"/>
					<shader name="phong.shader"/>
				</material>
				<rigidbody mass="1.0"/>
				<scripts>
					<!-- <script filename="resources/scripts/RotationTest.py"/> -->
				</scripts>
			</node>

			<node name="child_node_cube">
				<transform position="-1.5 -2 0"/>
				<mesh preset="CUBE"/>
				<material diffuse="1 0.5 0 1">
					<texture filename="UVmapLarge.bmp"/>
					<shader name="phong.shader"/>
				</material>
				<rigidbody mass="0.0" kinematic="true"/>
				<scripts>
					<!-- <script filename="resources/scripts/RotationTest.py"/> -->
					<script filename="resources/scripts/CollisionBehaviour.py"/>
				</scripts>
			</node>

			<node name="child_node">
				<transform position="0 2 0"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0.5 0 1">
					<shader name="phong.shader"/>
				</material>
			</node>

			<node name="child_plane_node">
				<transform position="0 -1 0" scale="3 3 3"/>
				<mesh preset="PLANE"/>
				<material diffuse="0 0 1 1">
					<texture filename="UVmapLarge.bmp"/>
					<shader name="phong.shader"/>
				</material>
				<scripts>
					<script filename="resources/scripts/RotationTest.py"/>
				</scripts>
			</node>

		</children>
	</node>
	<node name="grid">
		<transform position="0 0 0"/>
		<mesh preset="GRID" size="10" resolution="1"/>
	</node>

	<node name="from_file">
		<transform position="0 4 0"/>
		<material diffuse="1 0.5 0 1">
			<shader name="phong.shader"/>
			<texture filename="shape_texture.bmp"/>
		</material>
		<mesh filename="plane.obj"/>
		<script filename="resources/scripts/CircleRotation.py"/>
	</node>
	
	<!-- <node name="camera_pos">
		<children> -->
			<node name="camera_node">
				<transform position="0 -2 -16"/>
				<camera name="scene_cam" active="True"/>
				<scripts>
					<script filename="resources/scripts/CameraBehaviour.py"/>
				</scripts>
				<audiolistener/>
			</node>
	<!-- 	</children>
	</node> -->

	<node>
		<scripts>
			<script filename="resources/scripts/CircleRotation.py"/>
		</scripts>
		
		<children>
			<node name="light_red">
				<light name="a_light" 
					   diffuse="1.0 0.0 0.0 1.0" 
					   attenuation="0.5 0.22 0.002"  
					   type="SPOT" 
				/>
				<!-- shadow_type="HARD" -->
				<transform position="3 2 0"/>
				<scripts>
					<script filename="resources/scripts/PositionGizmo.py"/>
					<script filename="resources/scripts/KeyboardControl.py"/>
				</scripts>
			</node>

			<node name="light_blue">
				<light name="b_light" diffuse="0.0 0.0 1.0 1.0" attenuation="0.5 0.22 0.002"/>
				<transform position="-3 -2 0"/>
				<scripts>
					<script filename="resources/scripts/PositionGizmo.py"/>
					<script filename="resources/scripts/KeyboardControl.py"/>
				</scripts>
			</node>		

		</children>
	</node>


	<node name="box">
		<node name="wall_1">
			<transform position="5 0 0" rotation="0 0 1 1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 0 0 1">
				<shader name="phong.shader"/>
			</material>
		</node>
		<node name="wall_2">
			<transform position="-5 0 0" rotation="0 0 1 -1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="0 1 0 1">
				<shader name="phong.shader"/>
			</material>
		</node>
		<node name="wall_3">
			<transform position="0 0 -5" rotation="1 0 0 -1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<shader name="tex.shader"/>
				<texture filename="UVmapLarge.bmp"/>
			</material>
		</node>
		<node name="wall_4">
			<transform position="0 5 0" rotation="1 0 0 3.14159" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<texture filename="UVmapLarge.bmp"/>
				<shader name="phong.shader"/>
			</material>
		</node>

		<node name="wall_5">
			<transform position="0 -5 0" rotation="1 0 0 -3.14159" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<!-- <texture filename="Test.bmp"/> -->
				<shader name="phong.shader"/>
			</material>
		</node>

	</node>

	<node name="markers">
		<transform position="0 0 0" rotation="0 0 1 0"/>
		<children>
			<node name="marker_1">
				<transform position="1 0 0" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0 0 1"/>
			</node>
			<node name="marker_2">
				<transform position="-1 0 0" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="0 1 0 1"/>
			</node>
			<node name="marker_3">
				<transform position="0 0 1" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 1 0 1"/>
			</node>
			<node name="marker_4">
				<transform position="0 0 -1" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 1 0 1"/>
			</node>

		</children>
	</node>

</scene>
