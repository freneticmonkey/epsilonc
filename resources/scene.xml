<scene name="basic_scene">
	
	<!-- Predeclare objects! -->
	<materials>
		<material name="default_RED" diffuse="1.0 0 0 1.0"/>
	</materials>

	<node>
		<transform position="0 0 0"/>
		<scripts>
			<script filename="resources/scripts/MyBehaviourClass.py"/>
		</scripts>
		<children>
			<node>
				<transform position="0 0 0"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0.5 0 1">
					<shader name="phong.shader"/>
				</material>
			</node>
		</children>
	</node>
	

	<node name="main_node">
		<transform position="2 1 0"/>
		<mesh preset="SPHERE"/>
		<material diffuse="1 0.5 0 1">
			<shader name="phong.shader"/>
		</material>
		<scripts>
			<script filename="resources/scripts/MyBehaviourClass.py"/>
		</scripts>
		<children>
			
			<node name="child_node_cube">
				<transform position="-2 2 0"/>
				<mesh preset="CUBE"/>
				<material diffuse="1 0.5 0 1">
					<shader name="phong.shader"/>
				</material>
				<scripts>
					<!-- <script filename="resources/scripts/RotationTest.py"/> -->
				</scripts>
			</node>

			<node name="child_node">
				<transform position="0 2 0"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0.5 0 1">
					<shader name="phong.shader"/>
				</material>
			</node>

			<node name="child_plane_node">
				<transform position="0 -1 0" scale="3 3 3"/>
				<mesh preset="PLANE"/>
				<material diffuse="0 0 1 1">
					<shader name="phong.shader"/>
				</material>
				<scripts>
					<script filename="resources/scripts/RotationTest.py"/>
				</scripts>
			</node>

		</children>
	</node>
	<node name="grid">
		<transform position="0 0 0"/>
		<mesh preset="GRID" size="10" resolution="1"/>
	</node>

	
	<node name="camera_pos">
		<transform position="0 -2 -10"/>
		<children>
			<node name="camera_node">
				<camera name="scene_cam" active="True"/>
				<scripts>
					<script filename="resources/scripts/CameraBehaviour.py"/>
				</scripts>
			</node>
		</children>
	</node>

	<node>
		<scripts>
			<!-- <script filename="resources/scripts/RotationTest.py"/> -->
		</scripts>
		
		<children>
			<node name="scene_light">
				<light name="a_light" diffuse="1.0 1.0 1.0 1.0" attenuation="0 0 0 0.002"/>
				<transform position="0 3 0"/>
				<scripts>
					<script filename="resources/scripts/PositionGizmo.py"/>
					<script filename="resources/scripts/KeyboardControl.py"/>
				</scripts>
			</node>		
		</children>
	</node>


	<node name="box">
		<node name="wall_1">
			<transform position="5 0 0" rotation="0 0 1 1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 0 0 1">
				<shader name="phong.shader"/>
			</material>
		</node>
		<node name="wall_2">
			<transform position="-5 0 0" rotation="0 0 1 -1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="0 1 0 1">
				<shader name="phong.shader"/>
			</material>
		</node>
		<node name="wall_3">
			<transform position="0 0 -5" rotation="1 0 0 -1.5707" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<shader name="phong.shader"/>
			</material>
		</node>
		<node name="wall_4">
			<transform position="0 5 0" rotation="1 0 0 3.14159" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<shader name="phong.shader"/>
			</material>
		</node>

		<node name="wall_5">
			<transform position="0 -5 0" rotation="1 0 0 -3.14159" scale="10 10 10"/>
			<mesh preset="PLANE"/>
			<material diffuse="1 1 1 1">
				<shader name="phong.shader"/>
			</material>
		</node>

	</node>

	<node name="markers">
		<transform position="0 0 0" rotation="0 0 1 0"/>
		<children>
			<node name="marker_1">
				<transform position="1 0 0" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 0 0 1"/>
			</node>
			<node name="marker_2">
				<transform position="-1 0 0" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="0 1 0 1"/>
			</node>
			<node name="marker_3">
				<transform position="0 0 1" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 1 0 1"/>
			</node>
			<node name="marker_4">
				<transform position="0 0 -1" scale="0.1 0.1 0.1"/>
				<mesh preset="SPHERE"/>
				<material diffuse="1 1 0 1"/>
			</node>

		</children>
	</node>

</scene>
