struct Material
{
	vec4 ambient;
	vec4 diffuse;
	vec4 specular;
	float reflectance;
};

uniform Material material;

layout (std140) uniform GlobalMatrices {
	mat4 viewMatrix;
	mat4 projectionMatrix;
};

struct Light
{
	vec3 position;
	vec3 direction;

	vec4 ambient;
	vec4 diffuse;
	vec4 specular;
	
	vec3 attenuation;
	float strength;

	float spotCutoff;
	float spotExponent;

	int type;
};

layout (std140) uniform Lights {
	Light lights[4];
	int numLights;
};