<scene name="basic_scene">
	
	
	<!-- <node name="grid">
		<transform position="0 0 0"/>
		<mesh preset="GRID" size="10" resolution="1"/>
	</node> -->


	<node name="scenechild_plane_node">
		<transform position="0 -1 0" scale="10 1 10"/>
		<mesh preset="CUBE"/>
		<material diffuse="0 0 1 1">
			<texture filename="resources/textures/UVmapLarge.bmp"/>
			<shader name="phong.shader"/>
		</material>
	</node>
	
	<node name="texture_display">
		<transform position="0 3 -5" rotation="1 0 0 1.5707"  scale="10 1 10"/>
		<mesh preset="PLANE"/>
		<material diffuse="0 0 1 1">
			<shader name="phong.shader"/>
		</material>
	</node>

	<node name="from_file">
		<transform position="2 0 0"/>
		<material diffuse="1 1 1 1">
			<shader name="phong.shader"/>
		</material>
		<mesh filename="shape.obj"/>
	</node>

	<node name="from_file">
		<transform position="-2 0 0"/>
		<material diffuse="1 1 1 1">
			<shader name="phong.shader"/>
		</material>
		<mesh filename="shape.obj"/>
	</node>
	
	<node name="camera_pos">
		<transform position="0 -2 -14"/>
		<children>
			<node name="camera_node">
				<camera name="scene_cam" active="True"/>
				<scripts>
					<script filename="resources/scripts/CameraBehaviour.py"/>
				</scripts>
			</node>
		</children>
	</node>

	<node name="light_red">
		<light name="a_light" 
			   diffuse="1.0 0.0 0.0 1.0" 
			   attenuation="0.5 0.22 0.002"  
			   type="SPOT"
			   shadow_type="HARD" 
		/>
		<!-- shadow_type="HARD" -->
		<transform position="0 2 10"/>
		<scripts>
			<script filename="resources/scripts/PositionGizmo.py"/>
			<script filename="resources/scripts/KeyboardControl.py"/>
		</scripts>
	</node>

</scene>
